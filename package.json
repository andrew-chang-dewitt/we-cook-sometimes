{
  "name": "we-cook-sometimes",
  "version": "0.3.0",
  "scripts": {
    "format": "prettier --config .prettierrc.yaml --write './(*.html|*.js|*.json|src/**/*.ts|src/**/*.tsx)'",
    "test": "TS_NODE_FILES=true mocha 'src/**/*.spec.{ts,tsx}'",
    "test-one": "TS_NODE_FILES=true mocha $MATCH",
    "coverage": "nyc npm run test",
    "clean": "rm -rf dist",
    "clean-hard": "rm -rf ./node_modules package-lock.json && npm cache clear --force && npm run clean && npm i",
    "prebuild": "npm run clean && npm run format && npm run coverage",
    "build": "webpack --env.production --env.host=andrew-chang-dewitt.dev",
    "dev": "webpack-dev-server"
  },
  "nyc": {
    "all": true,
    "reporter": [
      "text",
      "html"
    ],
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "**/dist/**",
      "webpack.config.js",
      "**/*.spec.ts",
      "**/*.spec.tsx"
    ]
  },
  "mocha": {
    "extension": [
      "ts",
      "tsx"
    ],
    "require": [
      "ts-node/register",
      "jsdom-global/register",
      "ignore-styles",
      "@testing-library/react/dont-cleanup-after-each"
    ]
  },
  "author": "Andrew Chang-DeWitt",
  "license": "MIT",
  "devDependencies": {
    "@teamsupercell/typings-for-css-modules-loader": "^2.3.0",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^3.4.2",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/chai-dom": "0.0.10",
    "@types/enzyme": "^3.10.7",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/mocha": "^7.0.2",
    "@types/node-fetch": "^2.5.7",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.6",
    "@types/react-router-dom": "^5.1.6",
    "@types/sinon": "^9.0.8",
    "@types/webpack-env": "^1.15.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-dom": "^1.8.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.2.1",
    "css-loader": "^4.2.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "file-loader": "^6.1.1",
    "html-webpack-plugin": "^4.5.0",
    "ignore-styles": "^5.0.1",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "lazysizes": "^5.2.2",
    "mini-css-extract-plugin": "^0.11.3",
    "mocha": "^7.1.2",
    "msw": "^0.20.5",
    "node-fetch": "^2.6.1",
    "nyc": "^15.0.1",
    "prettier": "^2.1.2",
    "resolve-url-loader": "^3.1.1",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3",
    "sinon": "^9.2.0",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^7.0.1",
    "ts-node": "^8.9.1",
    "typescript": "^3.9.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-router-dom": "^5.2.0",
    "remark-parse": "^8.0.3",
    "remark-react": "^7.0.1",
    "unified": "^9.2.0",
    "typeface-montserrat": "0.0.75",
    "typeface-vollkorn": "0.0.72"
  }
}
